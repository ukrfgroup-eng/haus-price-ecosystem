# ============================================
# НАСТРОЙКИ API ФНС
# ============================================
# Ваш реальный ключ от API ФНС
# Получить: https://api-fns.ru
FNS_API_KEY=ваш_реальный_ключ_фнс

# ============================================
# НАСТРОЙКИ PROTALK БОТА
# ============================================
# Секретный ключ для вебхуков Protalk
PROTALK_WEBHOOK_SECRET=ваш_секрет_для_вебхука_проталк

# Токен бота Telegram (если будет использоваться)
TELEGRAM_BOT_TOKEN=токен_вашего_бота_телеграм

# ============================================
# БАЗА ДАННЫХ
# ============================================
# Подключение к PostgreSQL
DATABASE_URL=postgresql://haus_price_user:пароль@localhost/haus_price_db

# Подключение к Redis для кэширования
REDIS_URL=redis://localhost:6379

# ============================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ============================================
# Режим отладки (True/False)
DEBUG=False

# Секретный ключ Flask
FLASK_SECRET_KEY=сгенерируйте_случайный_секретный_ключ

# Домен вашего сайта
DOMAIN=https://дома-цены.рф

# ============================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ============================================
# Максимальное количество запросов к API ФНС в день
FNS_API_DAILY_LIMIT=100

# Время кэширования результатов проверки (в секундах)
CACHE_TTL=86400  # 24 часа

# ============================================
# EMAIL УВЕДОМЛЕНИЯ
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=ваш_email@gmail.com
EMAIL_PASSWORD=пароль_приложения
EMAIL_FROM=info@дома-цены.рф
